/**index.wxss**/

.searchArea {
  height: 60rpx;
  width: 630rpx;
  background: #e5d1a1;
  margin: 20rpx 0 20rpx 60rpx;
  border-radius: 30rpx;
  position: relative;
}

.searchMusic {
  width: 500rpx;
  height: 60rpx;
  /*background: red;*/
  text-indent: 140rpx;
  position: absolute;
  left: 65rpx;
  top: 0;
  font-size: 26rpx;
}

.searchIcon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 15rpx;
  left: 30rpx;
}

.closeIcon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 15rpx;
  right: 30rpx;
}

.cancelSearch {
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 28rpx;
  float: right;
  margin: 25rpx 20rpx 0 0;
}

.banner {
  width: 750rpx;
  height: 248rpx;
  overflow: hidden;
  margin-top: 10rpx;
}

.banner image {
  width: 750rpx;
  height: 248rpx;
}

.playAll {
  height: 80rpx;
  line-height: 80rpx;
  width: 720rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid #e5d1a1;
  font-size: 30rpx;
  text-indent: 30rpx;
  color: #e5d1a1;
}

.audioLi {
  height: 120rpx;
  width: 100%;
}

.liNum {
  width: 68rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 30rpx;
  color: #e5d1a1;
  float: left;
}

.audioInfo {
  width: 720rpx;
  height: 119rpx;
  float: left;
  left: 30rpx;
  /*border-bottom: 1px solid #e5d1a1;*/
  position: relative;
  overflow: hidden;
}

.bottom-border {
  width: 615rpx;
  height: 117rpx;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 2;
  border-bottom: 1px solid #635f59;
  /*background: red;*/
}

.infoImg {
  background: #fff;
  width: 80rpx;
  height: 80rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.audioName {
  /*background:red;*/
  position: absolute;
  left: 104rpx;
  top: 20rpx;
  width: 450rpx;
  height: 48rpx;
  font-size: 28rpx;
  color: #e5d1a1;
  z-index: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audioAuthor {
  /*background:green;*/
  position: absolute;
  left: 104rpx;
  top: 68rpx;
  width: 450rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #8a8782;
  z-index: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shareIconArea {
  /*background:blue;*/
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  width: 60rpx;
  height: 90rpx;
  z-index: 3;
}

.shareIcon {
  width: 44rpx;
  height: 44rpx;
  margin-left: 8rpx;
}

.shareText {
  height: 48rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #8a8782;
  text-align: center;
}

.modelTitle {
  width: 750rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-indent: 30rpx;
  font-size: 30rpx;
  color: #e5d1a1;
  font-weight: 700;
  position: relative;
}

.moreIcon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 30rpx;
  top: 29rpx;
}

.scrollView {
  height: 300rpx;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
}

