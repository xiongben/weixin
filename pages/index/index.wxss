.searchArea {
  height: 60rpx;
  width: 630rpx;
  background: #e5d1a1;
  margin: 25rpx 0 0 60rpx;
  border-radius: 30rpx;
  position: relative;
}

.searchMusic {
  width: 500rpx;
  height: 60rpx;
  /*background: red;*/
  text-indent: 140rpx;
  position: absolute;
  left: 65rpx;
  top: 0;
  font-size:26rpx;
}

.searchIcon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 15rpx;
  left: 30rpx;
}
.closeIcon{
  width:30rpx;
  height:30rpx;
