/* pages/index/selectPage.wxss */

.searchArea {
  height: 60rpx;
  width: 630rpx;
  background: #e5d1a1;
  margin: 25rpx 0 0 60rpx;
  border-radius: 30rpx;
  position: relative;
}

.searchMusic {
  width: 500rpx;
  height: 60rpx;
  /*background: red;*/
  text-indent: 140rpx;
  position: absolute;
  left: 65rpx;
  top: 0;
  font-size: 26rpx;
}

.searchIcon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 15rpx;
  left: 15rpx;
}

.closeIcon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 15rpx;
  right: 15rpx;
}
.hotSearch{
  width:720rpx;
  margin-left:30rpx;
  /*background:red;*/
}
.hotSearchTitle{
  height:88rpx;
  line-height:88rpx;
  font-size:28rpx;
  color:#8a8782;
}
.hotSearchList{
  height:64rpx;
  line-height:64rpx;
  display:inline-block;
  border:1px solid #e5d1a1;
  border-radius: 32rpx;
  color:#e5d1a1;
  font-size:26rpx;
  padding:0 30rpx;
  margin:0 12rpx 30rpx 12rpx;
}
.searchHistory{
  width:750rpx;
}
.historyTitle{
  height:88rpx;
  line-height:88rpx;
  font-size:28rpx;
  color:#8a8782;
  text-indent: 30rpx;
  border-bottom: 1px solid #e5d1a1;
}
.clearIcon{
  width:30rpx;
  height:30rpx;
  float:right;
  margin:30rpx 30rpx 0 0;
}
.historyList{
  width:720rpx;
  height:88rpx;
  line-height:88rpx;
  border-bottom: 1px solid #635f59;
  margin-left:30rpx;
  font-size:28rpx;
  color:#c1af87;
  overflow: hidden;
}
.testinput{
  width:750rpx;
  height:50rpx;
  background:green;
}
.submitBtn{
  width:60rpx;
  height:60rpx;
  background: rgba(255,200,0, 0);
  /*background:red;*/
  position: absolute;
  left:15rpx;
}
.closeBtn{
  width:60rpx;
  height:60rpx;
  background: rgba(255,200,0, 0);
  /*background:red;*/
  position: absolute;
  right:15rpx;
}