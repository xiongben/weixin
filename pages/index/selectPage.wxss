/* pages/index/selectPage.wxss */
.searchArea{
  height:100rpx;
  
}
.searchMusic{
  width:630rpx;
  height:60rpx;
  background:#e5d1a1;
  border-radius: 30rpx;
  margin:25rpx 0 0 25rpx;
  text-align: center;
  float:left;
}
.cancelSearch{
  height:60rpx;
  line-height:60rpx;
  color:#fff;
  font-size:28rpx;
  float:right;
   margin:25rpx 20rpx 0 0;
}
.hotSearch{
  width:720rpx;
  margin-left:30rpx;
  /*background:red;*/
}
.hotSearchTitle{
  height:88rpx;
  line-height:88rpx;
  font-size:28rpx;
  color:#8a8782;
}
.hotSearchList{
  height:64rpx;
  line-height:64rpx;
  display:inline-block;
  border:1px solid #e5d1a1;
  border-radius: 32rpx;
  color:#e5d1a1;
  font-size:26rpx;
  padding:0 30rpx;
  margin:0 12rpx 30rpx 12rpx;
}
.searchHistory{
  width:750rpx;
}
.historyTitle{
  height:88rpx;
  line-height:88rpx;
  font-size:28rpx;
  color:#8a8782;
  text-indent: 30rpx;
  border-bottom: 1px solid #e5d1a1;
}
.clearIcon{
  width:30rpx;
  height:30rpx;
  float:right;
  margin:30rpx 30rpx 0 0;
}
.historyList{
  width:720rpx;
  height:88rpx;
  line-height:88rpx;
  border-bottom: 1px solid #e5d1a1;
  margin-left:30rpx;
  font-size:28rpx;
  color:#c1af87;
  overflow: hidden;
}