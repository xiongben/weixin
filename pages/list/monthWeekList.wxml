<!--pages/list/monthWeekList.wxml-->
<view class="container">
  <view class="listTop">
    <view class="listType">
      <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">{{titleName[0].name}}周榜</view>
      <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">{{titleName[1].name}}周榜</view>
    </view>
  </view>
  <view class="listRule" bindtap="rulePage">打榜规则：播放一次+1分，分享一次+10分
    <image src="../../static/images/icon_more2.png" class="moreicon"></image>
  </view>
 
  <!--<swiper current="{{currentTab}}" class="swiper-box" duration="300" bindchange="bindChange" style="height:{{swiperHeight}}rpx">-->
  <view class="typePageArea">
    <view class="typePage {{currentTab==0 ? '' : 'hide'}}">
      <view class="audioLi" wx:for="{{list[0]}}" wx:key="idx" data-id="{{item.songinfo.id}}" bindtap="toAudioPlay">
        <view class="liNum">{{index+1}}</view>
        <view class="audioInfo">
          <image class="infoImg" src="{{item.songinfo.cover}}"></image>
          <view class="audioName">{{item.songinfo.name}}</view>
          <view class="audioAuthor">{{item.songinfo.singerName}}</view>
          <view class="shareIconArea"  catchtap="shareSong" data-songid="{{item.songinfo.id}}">
            <image src="../../static/images/icon_hit_pre.png" class="shareIcon"></image>
            <view class="shareText">打榜</view>
          </view>
        </view>
      </view>
    </view>
    <view class="typePage {{currentTab==1 ? '' : 'hide'}}">
      <view class="audioLi" wx:for="{{list[1]}}" wx:key="idx" data-id="{{item.songinfo.id}}" bindtap="toAudioPlay">
        <view class="liNum">{{index+1}}</view>
        <view class="audioInfo">
          <image class="infoImg" src="{{item.songinfo.cover}}"></image>
          <view class="audioName">{{item.songinfo.name}}</view>
          <view class="audioAuthor">{{item.songinfo.singerName}}</view>
          <view class="shareIconArea"  catchtap="shareSong" data-songid="{{item.songinfo.id}}">
            <image src="../../static/images/icon_hit_pre.png" class="shareIcon"></image>
            <view class="shareText">打榜</view>
          </view>
        </view>
      </view>
    </view>
    </view>
  <!--</swiper>-->
  <view class="shareBack" wx:if="{{shareIcon}}" bindtap="hideShareBack">
    <image src="../../static/images/icon_arrows_share.png" class="sharePic"></image>
  </view>
</view>