/* pages/list/monthWeekList.wxss */

.listTop {
  height: 80rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.listType {
  width: 688rpx;
  height: 60rpx;
  margin: 20rpx;
  position: relative;
  border-radius: 30rpx;
  border: 1px solid #e5d1a1;
}



.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #999;
  text-align: center;
  line-height: 60rpx;
  /*background:#fff;*/
  border-radius: 25rpx;
}

.on {
  color: #222;
  background: #e5d1a1;
}

.listNotActive {
  color: #e5d1a1;
}

.listRule {
  height: 50rpx;
  line-height: 50rpx;
  text-indent: 30rpx;
  font-size: 24rpx;
  color: #8a8782;
  margin-top:10rpx;
  /*background:blue;*/
}
.ruleText{
  height: 50rpx;
  line-height: 50rpx;
  text-indent: 30rpx;
  font-size: 24rpx;
  color: #8a8782;
  width:650rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  float:left;
}
.moreicon {
  height: 28rpx;
  width: 28rpx;
  float: right;
  margin-right: 30rpx;
  margin-top: 11rpx;
}

.audioLi {
  height: 120rpx;
  width: 100%;
}

.liNum {
  width: 68rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 30rpx;
  color: #e5d1a1;
  float: left;
}

.audioInfo {
  width: 682rpx;
  height: 119rpx;
  float: left;
  border-bottom: 1px solid #635f59;
  position: relative;
}

.infoImg {
  background: #fff;
  width: 80rpx;
  height: 80rpx;
  margin-top: 20rpx;
  border-radius: 15rpx;
}

.audioPlayArea{
  /*background:yellow;*/
  position: absolute;
  left: 104rpx;
  top: 20rpx;
  width: 450rpx;
  height: 88rpx;
  z-index:2;
}
.audioName {
  /*background:red;*/
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 450rpx;
  height: 48rpx;
  font-size: 28rpx;
  color: #e5d1a1;
  z-index: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audioAuthor {
  /*background:green;*/
  position: absolute;
  left: 0rpx;
  top: 48rpx;
  width: 450rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #8a8782;
  z-index: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shareIconArea {
  /*background:blue;*/
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  width: 60rpx;
  height: 90rpx;
  z-index: 3;
  /*background:red;*/
}

.shareIcon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  left:8rpx;
  top:0;
  z-index:5;
}
.shareButton{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  left:0;
  top:0;
  z-index:6;
  background: rgba(0, 0, 0, 0);
}
.shareText {
  width:60rpx;
  height: 48rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #8a8782;
  text-align: center;
  position: absolute;
  left:0;
  bottom:0;
}
.swiper-box{
  margin-bottom: 60rpx;
}

/*swiper-item{
  height:100vh;
}*/

.shareBack{
  width:750rpx;
  height:100vh;
  position: fixed;
  z-index:10;
  top:0;
  left:0;
  background: rgba(0, 0, 0, 0.5);
}
.sharePic{
  position: absolute;
  width:200rpx;
  height:200rpx;
  right:0;
  top:0;
  z-index:12rpx;
}
.hide{
  display:none;
}
.typePageArea{
  width:750rpx;
  height:auto;
  position: relative;
}
.typePage{
  position: absolute;
  left:0;
  top:0;
}

