/* pages/list/recommendSongs.wxss */

.playAll {
  height: 80rpx;
  line-height: 80rpx;
  width: 720rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid #635f59;
  font-size: 30rpx;
  text-indent: 30rpx;
  color: #e5d1a1;
}

.playIcon {
  width: 45rpx;
  height: 45rpx;
  margin-top: 17rpx;
  float: left;
}

.moreicon {
  height: 28rpx;
  width: 28rpx;
  float: right;
  margin-right: 30rpx;
  margin-top: 11rpx;
}

.audioLi {
  height: 120rpx;
  width: 100%;
}

.liNum {
  width: 68rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 30rpx;
  color: #e5d1a1;
  float: left;
}

.audioInfo {
  width: 682rpx;
  height: 119rpx;
  float: left;
  border-bottom: 1px solid #635f59;
  position: relative;
}

.infoImg {
  background: #fff;
  width: 80rpx;
  height: 80rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.audioPlayArea{
  /*background:yellow;*/
  position: absolute;
  left: 104rpx;
  top: 20rpx;
  width: 450rpx;
  height: 88rpx;
  z-index:2;
}
.audioName {
  /*background:red;*/
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 450rpx;
  height: 48rpx;
  font-size: 28rpx;
  color: #e5d1a1;
  z-index: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audioAuthor {
  /*background:green;*/
  position: absolute;
  left: 0rpx;
  top: 48rpx;
  width: 450rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #8a8782;
  z-index: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shareIconArea {
  /*background:blue;*/
  position: absolute;
  right: 30rpx;
  top: 20rpx;
  width: 60rpx;
  height: 90rpx;
  z-index: 3;
  /*background:red;*/
}

.shareIcon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  left:8rpx;
  top:0;
  z-index:5;
}
.shareButton{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  left:0;
  top:0;
  z-index:6;
  background: rgba(0, 0, 0, 0);
}
.shareText {
  width:60rpx;
  height: 48rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #8a8782;
  text-align: center;
  position: absolute;
  left:0;
  bottom:0;
}


/*控制器*/
.myAudio{
  width:750rpx;
  height:60rpx;
  background:rgba(0, 0, 0, 0.7);
  position: fixed;
  z-index: 50;
  bottom:0;
  left:0;
}
.audioImg{
  width:100rpx;
  height:50rpx;
  position: absolute;
  left:30rpx;
  top:5rpx;
  border-radius: 15rpx;
}
.audioBackName{
  position: absolute;
  width:500rpx;
  height:40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color:#fff;
  left:150rpx;
  top:10rpx;
}
.audioBackSinger{
  position: absolute;
  width:500rpx;
  height:40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color:#635f59;
  left:130rpx;
  top:55rpx;
}
.myAudioBackBtn{
  width:40rpx;
  height:40rpx;
  position: absolute;
  right:40rpx;
  top:10rpx;
}