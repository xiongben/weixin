#container{
  
  background:red;
}
.backImg{
  background: url("http://img02.tooopen.com/images/20150928/tooopen_sy_143912755726.jpg");
  width:100%;
  height:100vh;
  position: absolute;
  left:0;
  top:0;
  z-index: 2;
  filter: blur(10px);
}
.songPic{
  position: absolute;
  z-index: 3;
  width:600rpx;
  height:600rpx;
  left:75rpx;
  top:160rpx;
}
.discBack{
  position: absolute;
  width:600rpx;
  height:600rpx;
  left:0;
  top:0;
  z-index:4;
}
.cover{
  position: absolute;
  z-index: 4;
  width:400rpx;
  height:400rpx;
  left:100rpx;
  top:100rpx;
  border-radius: 200rpx;
  
}
.coverActive{
  animation: rotation 12s linear infinite;
}
@-webkit-keyframes rotation{
from {-webkit-transform: rotate(0deg);}
to {-webkit-transform: rotate(360deg);}
}

