/* pages/audioPlayer/audioPlay.wxss */
#container{
  
  background:red;
}
.backImg{
  background: url("http://img02.tooopen.com/images/20150928/tooopen_sy_143912755726.jpg");
  width:100%;
  height:100vh;
  position: absolute;
  left:0;
  top:0;
  z-index: 2;
  filter: blur(50px);
}
.songPic{
  position: absolute;
  z-index: 3;
  width:600rpx;
  height:600rpx;
  left:75rpx;
  top:160rpx;
}
.discBack{
  position: absolute;
  width:600rpx;
  height:600rpx;
  left:0;
  top:0;
  z-index:4;
}
.cover{
  position: absolute;
  z-index: 4;
  width:400rpx;
  height:400rpx;
  left:100rpx;
  top:100rpx;
  border-radius: 200rpx;
  
}
.coverActive{
  animation: rotation 12s linear infinite;
}
@-webkit-keyframes rotation{
from {-webkit-transform: rotate(0deg);}
to {-webkit-transform: rotate(360deg);}
}

.songshare{
  position: absolute;
  z-index: 3;
  width:750rpx;
  height:110rpx;
  /*background:blue;*/
  left:0;
  top:850rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.menuIcon{
  width:48rpx;
  height:48rpx;
  margin:31rpx 35rpx;
}
.songContrl{
  width:750rpx;
  height:230rpx;
  position: absolute;
  z-index: 3;
  left:0;
  bottom: 0;
  
}
.playProgress{
  width:530rpx;
  height:40rpx;
  position: absolute;
  left:80rpx;
  top:20rpx;

}
.controlBtnArea{
  width:750rpx;
  height:140rpx;
  /*background:red;*/
  position: absolute;
  left:0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.controlIcon{
  width:38rpx;
  height:40rpx;
  margin:35rpx 60rpx;
}
.controlPauseIcon{
  width:72rpx;
  height:72rpx;
  margin:10rpx 60rpx;
}
audio{
  position:absolute;
  z-index: 3;
  left:0;
  top:0;
}
.cur_time,.total_time{
  /*background:red;*/
  position: absolute;
  z-index: 5;
  display: block;
  width:70rpx;
  height:40rpx;
  line-height:40rpx;
  font-size: 24rpx;
  color:#fff;
  top:40rpx;
  text-align: center;
}
.cur_time{
  left:5rpx;
}
.total_time{
   right:5rpx;
}