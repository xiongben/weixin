<!--pages/audioPlayer/audioPlay.wxml-->
<view class="container">

  <view class="musicInfo">
    <text class="musicInfoTitle">{{name}}</text>
    <text class="musicInfoAuthor">{{author}}</text>
    <image class="musicCover" src="{{poster}}"></image>
    <view class="musicLyric">
      <view class="lyricBox" wx:for="{{lyricArr}}" wx:key="idx" data-point="{{timeArr[index]}}" wx:if="{{showArr[index]}}">{{item}}</view>
    </view>
  </view>
  <audio poster="{{poster}}" name="{{name}}" author="{{author}}" src="{{src}}" id="myAudio" controls loop></audio>
  
  <button type="primary" class="controlBtn" bindtap="audioPlay">播放</button>
  <button type="primary" class="controlBtn" bindtap="audioPause">暂停</button>
  <button type="primary" class="controlBtn" bindtap="audio14">设置当前播放时间为14秒</button>
  <button type="primary" class="controlBtn" bindtap="audioStart">回到开头</button>
  <view class="classname">333{{currentPosition}}</view>
</view>